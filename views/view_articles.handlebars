<section container id="articles">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            {{#if articles}} {{#each articles}}
            <div class="card bg-light border-dark mb-3" id="articleCard">
                <div class="card-header border-dark">{{title}}</div>
                <div class="card-body text-dark">
                    <a href={{link}} target="_blank">{{link}}</a>
                    <p class="card-text">{{summary}}</p>
                    {{#unless saved}}<button class="btn save" style="border: solid 1px green" data-id={{this._id}}>Save Article</button>
                    {{/unless}}
                    {{#if saved}}
                    <button class="btn delete" style="border: solid 1px rgb(167, 33, 33)" data-id={{this._id}}>Delete Article</button>
                     <button class="btn notes" style="border: solid 1px rgb(42, 42, 171)" data-id={{this._id}}>Add A Note</button>
                        {{#if note}}
                        <button class="btn deleteNote" style="border: solid 1px rgb(167, 33, 33)" data-id={{this._id}}>Delete Note</button>
                        {{/if}}
                    {{/if}}
                </div>
            </div>
            {{/each}} {{else}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4>There are no articles.</h4>
                </div>
            </div>
            {{/if}}
        </div>
        <div class="col-md-1"></div>
    </div>
</section>

